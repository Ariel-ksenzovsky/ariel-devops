pipeline {
    agent any

    environment {
        SQL_FILE_PATH = '/tmp/init.sql'
        DB_PASSWORD = credentials('mysql_root')
        DOCKER_TOKEN_ID = 'docker-hub-token'
        DOCKER_IMAGE = 'arielk2511/star_meme_sql_compose'
        BUILD_NUM = "${BUILD_NUMBER}"
        AWS_CREDENTIALS = 'aws-creds'
        AWS_REGION = 'us-east-1'         // Replace with your AWS region
        AMI_ID = 'ami-01816d07b1128cd2d' // Replace with your AMI ID
        INSTANCE_TYPE = 't2.micro'      // Replace with your desired instance type
        KEY_NAME = 'EC2-Key-Pair'      // Replace with your EC2 key pair name
        SECURITY_GROUP = 'sg-0fa5d6a6aacb737bf' // Replace with your security group ID
    }

    triggers {
        pollSCM('* * * * *')  // poll SCM every minute
    }

    stages {
        stage('Cleanup') {
            steps {
                sh '''
                docker stop docker-gif-app || echo "Container not running"
                docker rm docker-gif-app || echo "Container already removed"
                rm -rf ariel-devops || true
                git clone https://github.com/Ariel-ksenzovsky/ariel-devops.git
                cd ariel-devops/Flask/mysql-task
                pwd
                docker compose down || true
                docker rmi $(docker images -q) -f || true
                '''
            }
        }

        stage('Set the Environment Variables') {
            steps {
                sh '''
                pwd
                id
                cd ariel-devops/Flask/mysql-task
                pwd
                cp /home/arielk/.env /var/lib/jenkins/workspace/test1/ariel-devops/Flask/mysql-task
                '''
            }
        }

        stage('Docker Login') {
            steps {
                script {
                    withCredentials([string(credentialsId: env.DOCKER_TOKEN_ID, variable: 'DOCKER_TOKEN')]) {
                        sh """
                        echo "$DOCKER_TOKEN" | docker login -u arielk2511 --password-stdin
                        """
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    sh '''
                    cd ariel-devops/Flask/mysql-task
                    docker build -t ${DOCKER_IMAGE}:latest .
                    docker build -t ${DOCKER_IMAGE}:2.0.${BUILD_NUM} .
                    docker push ${DOCKER_IMAGE}:latest
                    docker push ${DOCKER_IMAGE}:2.0.${BUILD_NUM}
                    '''
                }
            }
        }

        stage('Prepare SQL File') {
            steps {
                sh '''
                cp ariel-devops/Flask/mysql-task/init.sql ${SQL_FILE_PATH}
                '''
            }
        }

        stage('Run') {
            steps {
                sh '''
                docker ps -a
                id
                pwd
                cd ariel-devops/Flask/mysql-task
                pwd
                docker compose up -d
                docker ps
                '''
            }
        }

        stage('Test-web') {
            steps {
                sh 'sleep 30'
                sh '''
                if ! docker logs docker-gif-app; then
                    echo "Container logs check failed"
                    exit 1
                fi
                if ! curl -f http://localhost:5000; then
                    echo "App is not reachable."
                    docker logs docker-gif-app
                    exit 1
                fi
                '''
            }
        }

        stage('Launch EC2 Instance') {
            steps {
                script {
                    // Create User Data script to install Docker and Docker Compose
                    def userData = '''#!/bin/bash
                        # Update the package repository and install Docker
                        sudo yum update -y
                        sudo yum install -y docker
                        sudo systemctl start docker
                        sudo systemctl enable docker

                        # Install Docker Compose
                        sudo curl -L "https://github.com/docker/compose/releases/download/1.29.2/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
                        sudo chmod +x /usr/local/bin/docker-compose

                        # Add ec2-user to the docker group to run docker without sudo
                        sudo usermod -a -G docker ec2-user
                    '''

                    // Run the AWS CLI command to launch an EC2 instance with the User Data script
                    def launchCommand = """
                        aws ec2 run-instances \
                            --image-id ${env.AMI_ID} \
                            --instance-type ${env.INSTANCE_TYPE} \
                            --key-name ${env.KEY_NAME} \
                            --security-groups ${env.SECURITY_GROUP} \
                            --associate-public-ip-address \
                            --region ${env.AWS_REGION} \
                            --user-data "${userData}"
                    """
                    def result = sh(script: launchCommand, returnStdout: true).trim()
                    echo "Launched EC2 instance with response: ${result}"

                    // Extract the instance ID from the response
                    def instanceId = sh(script: "echo ${result} | jq -r '.Instances[0].InstanceId'", returnStdout: true).trim()
                    echo "Launched EC2 instance with ID: ${instanceId}"

                    // Get the public IP of the instance
                    def publicIp = sh(script: "aws ec2 describe-instances --instance-id ${instanceId} --query 'Reservations[0].Instances[0].PublicIpAddress' --output text --region ${env.AWS_REGION}", returnStdout: true).trim()
                    echo "Instance Public IP: ${publicIp}"

                    // Wait for the instance to be ready (optional, for a more robust solution)
                    sh "sleep 30"
                }
            }
        }

        stage('Copy Files to EC2 Instance') {
            steps {
                script {
                    // Use SCP to copy multiple files to the EC2 instance
                    def scpCommand = """
                        scp -o StrictHostKeyChecking=no -i ${env.KEY_PATH} \
                            /var/lib/jenkins/workspace/test1/ariel-devops/Flask/mysql-task.docker-compose.yml \
                            /var/lib/jenkins/workspace/test1/ariel-devops/Flask/mysql-task/init.sql \
                            /var/lib/jenkins/workspace/test1/ariel-devops/Flask/mysql-task/.env \
                            ec2-user@${publicIp}:/home/ec2-user/

                            echo "DB_PASSWORD"=\${mysql_root} >> /home/ec2-user/.env
                    """
                    sh(script: scpCommand)
                    echo "Files copied to EC2 instance."
                }
            }
        }

        stage('Run Docker Container "deploy"') {
            steps {
                script {
                    // Run Docker container on the EC2 instance
                    def containerCommand = """
                        ssh -o StrictHostKeyChecking=no -i ${env.KEY_PATH} ec2-user@${publicIp} << 'EOF'
                            # Run a sample Docker container compose
                            docker compose up
                        EOF
                    """
                    sh(script: containerCommand)
                    echo "Docker container is running on EC2 instance."
                }
            }
        }
    }
    post {
        always {
            sh '''
            rm -f ${SQL_FILE_PATH}
            '''
        }
    }
}